<h1>Recipes</h1>

<%= paginate @recipes %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cook Time</th>
      <th>Prep Time</th>
      <th>Ratings</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.cook_time %></td>
        <td><%= recipe.prep_time %></td>
        <td><%= recipe.ratings %></td>
        <td><%= link_to 'Show', recipe %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @recipes %>
